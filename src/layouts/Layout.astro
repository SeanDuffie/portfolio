---
// src/layouts/Layout.astro
import "@/styles/globals.css";
import Navigation from "@/components/Navigation.svelte"; // Assuming you port Nav to Svelte

const { title } = Astro.props;
const currentPath = Astro.url.pathname; // Gets the current URL (e.g., "/projects")
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <link rel="icon" href="img/Hawaii Icon 1.webp" type="image/x-icon" />
    <script is:inline>
      if (
        localStorage.theme === "dark" ||
        (!("theme" in localStorage) &&
          window.matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    </script>
  </head>
  <body class="bg-background transition-colors duration-200">
    <Navigation client:load currentPath={currentPath} />
    <main>
      <slot />
    </main>
    <footer></footer>
  </body>
</html>
